{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"title": "image",
	"description": "A image atom",
	"type": "object",
	"properties": {
		"modifier": {
			"description": "A modifier - default is 16:9",
			"enum": ["", "fit-parent", "1x1"]
		},
		"alt": {
			"type": "string"
		},
		"srcset": {
			"type": "object",
			"properties": {
				"renditions": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"width": {
								"description": "sizes",
								"enum": [
									"100",
									"180",
									"230",
									"290",
									"320",
									"360",
									"460",
									"480",
									"580",
									"640",
									"760",
									"960",
									"1200",
									"1280",
									"1496",
									"1920",
									"1960",
									"2880",
									"3920"
								]
							},
							"src": {
								"type": "string"
							}
						},
						"required": ["width", "src"]
					}
				},
				"fallback": {
					"type": "object",
					"description": "The fallback image",
					"properties": {
						"src": {
							"type": "string"
						}
					},
					"required": ["src"]
				}
			}
		}
	},
	"required": ["alt", "srcset"]
}
